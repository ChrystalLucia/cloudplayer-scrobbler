{
    "name": "Скробблер для Яндекс.Музыки",
    "version": "1.1.2",
    "description": "Скробблит песни из Яндекс.Музыки в Last.fm",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "64": "img/icon64.png",
        "128": "img/icon128.png"
    },
    "browser_action": {
        "default_icon": "img/main-icon.png",
        "popup": "popup.html"
    },
    "permissions": [
        "http://ws.audioscrobbler.com/",
        "http://music.yandex.ru/"
    ],
    "background_page" : "background.html",
    "content_scripts": [
        {
            "js": ["js/inject.js"],
            "matches": ["http://music.yandex.ru/*"]
        },
		{
            "js": ["js/contentscript.js"],
            "matches": ["http://music.yandex.ru/*"]
        },
        {
            "js": ["js/jquery-1.5.1.min.js"],
            "matches": ["http://music.yandex.ru/*"],
            "run_at": "document_start"
        }
    ]
}
